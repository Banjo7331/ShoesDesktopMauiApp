<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoesDesktopMauiApp.Views.RatingsPage"
             Title="Ratings">
    <StackLayout Padding="20">
        <ListView ItemsSource="{Binding Ratings}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding User}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Rating}" FontSize="16" TextColor="Gray" HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Rating" Command="{Binding NavigateToAddRatingCommand}" BackgroundColor="#0078D4" TextColor="White" />
    </StackLayout>
</ContentPage>